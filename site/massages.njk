---
layout: base.njk
---
<h2 class="pt-6 pb-10 text-3xl text-center md:mb-16 md:text-5xl">Unsere Services</h2>

<section class="px-4">
  <div class="max-w-6xl mx-auto flex flex-wrap">
    {%- for service in collections.service -%}
      {%- if service.data.show -%}
        <div id="{{ service.fileSlug }}" class="mb-20 max-w-xs mx-auto flex flex-col shadow-lg md:max-w-full md:flex-row md:shadow-none md:mb-56 {% if loop.index % 2 == 0 %} md:flex-row-reverse {% else %} md:flex-row {% endif %}">
          <div class="md:w-1/3 text-center flex flex-col items-center bg-beige-100 md:bg-transparent">
            <img class="h-48 w-full object-cover opacity-75 md:h-full" src="{{ service.data.imageUrl }}">
            <h2 class="p-4 -mt-8 inline-block bg-white shadow-md z-10 rounded md:hidden">{{ service.data.name }}</h2>
          </div>
          <div class="md:w-2/3 px-4 pb-6 pt-8 bg-beige-100 md:bg-transparent md:pt-0 md:pb-0 md:px-8">
            <h2 class="pb-4 text-2xl hidden md:block md:px-2">{{ service.data.name }}</h2>
            <div class="md:px-2 markdown">
              {{ service.templateContent | safe }}
            </div>
            <a class="hidden text-2xl px-2 mt-3 border-4 border-orange-400 text-orange-600 rounded hover:bg-orange-400 hover:text-white md:inline-block" href="https://connect.shore.com/widget/sport-und-entspannungstherapie-medizinische-massagepraxis?locale=de" target="_blank">Buchen</a>
          </div>
          <div class="py-6 w-full flex justify-center bg-beige-200 md:hidden">
            <a class="p-3 w-40 block text-center bg-white rounded shadow hover:shadow-lg" href="https://connect.shore.com/widget/sport-und-entspannungstherapie-medizinische-massagepraxis?locale=de" target="_blank">Buchen</a>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</section>
